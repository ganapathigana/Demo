<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wallandfloor.store" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Waf Store</name>
    <description>
       Since 6 years (Nov 3rd, 2013 ) WAF VIZ helping the ceramic industry to improve their sales.
    </description>
    <author email="info@petrocorp.in" href="http://petrocorp.in/">
       Vz Petrocorp Innovation India Pvt Ltd
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
    <splash src="res/screen/android/land-ldpi.png" density="land-ldpi"/>
    <splash src="res/screen/android/land-ldpi.png" density="land-mdpi"/>
    <splash src="res/screen/android/land-ldpi.png" density="land-xhdpi"/>

    <splash src="res/screen/android/land-ldpi.png" density="port-hdpi"/>
    <splash src="res/screen/android/land-ldpi.png" density="port-ldpi"/>
    <splash src="res/screen/android/land-ldpi.png" density="port-mdpi"/>
    <splash src="res/screen/android/land-ldpi.png" density="port-xhdpi"/>
         <icon src="res/screen/android/waf.png" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenDelay" value="4000" />
   <preference name="ShowSplashScreenSpinner" value="false"/>


</widget>
